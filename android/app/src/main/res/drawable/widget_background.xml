<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Soft shadow under the button -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#55000000" />
        </shape>
    </item>

    <!-- Base gradient surface -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:startColor="#D32F2F"
                android:centerColor="#D32F2F"
                android:endColor="#D32F2F"
                android:type="linear" />
        </shape>
    </item>

    <!-- Dark rim for depth -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#B71C1C" />
        </shape>
    </item>

    <!-- Top highlight to mimic light source -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="26dp">
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:startColor="#33FFFFFF"
                android:centerColor="#11FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
